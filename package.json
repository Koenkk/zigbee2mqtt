        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "collectCoverageFrom": [
      "lib/**/*.js"
    ]
  },
  "bin": {
    "zigbee2mqtt": "cli.js"
