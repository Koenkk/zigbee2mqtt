{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2018",
        "lib": ["es2018"],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": true,
        "rootDir": "lib",
        "resolveJsonModule": true,
        "paths": {
            "*": [
                "node_modules/*",
                "lib/types/*"
            ]
        },
    },
    "include": [
        "lib/**/*"
    ],
}