{
    "env": {
        "mocha": true,
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended", "google"],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "require-jsdoc": "off",
        "indent": ["error", 4],
        "max-len": ["error", { "code": 120 }],
        "mocha/no-exclusive-tests": "error"
    },
    "plugins": [
        "mocha"
    ]
}
